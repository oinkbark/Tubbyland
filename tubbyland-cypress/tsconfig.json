{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
    ],
    "types": [
      "cypress",
      "node"
    ]
  },
  "include": [
    "cypress/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}